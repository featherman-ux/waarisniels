---
export interface Props { post: import('astro:content').CollectionEntry<'blog'> }
const { post } = Astro.props
const { title, description, pubDate, image } = post.data
const href = `/blog/${post.slug}/`

const resolveImageSrc = (input?: string) => {
  if (!input) return '/images/default-post.jpg'
  try {
    return new URL(input, Astro.url).href
  } catch {
    return '/images/default-post.jpg'
  }
}

const imgSrc = resolveImageSrc(image?.url)
const imgAlt = image?.alt ?? title
---
<article class="rounded-lg border bg-white dark:bg-gray-800 p-4 shadow-sm hover:shadow-md transition">
  <a href={href} class="block">
    <div class="relative mb-3 overflow-hidden rounded-md bg-gray-100 dark:bg-gray-900 aspect-[4/3] md:aspect-[5/3]">
      <img
        src={imgSrc}
        alt={imgAlt}
        class="absolute inset-0 h-full w-full object-cover md:object-contain md:p-2"
        loading="lazy"
      />
    </div>
    <h3 class="text-xl font-semibold">{title}</h3>
    <p class="text-sm text-gray-500 mb-2">
      {new Date(pubDate).toLocaleDateString('nl-NL')}
    </p>
    {description && (
      <p class="text-gray-700 dark:text-gray-300 line-clamp-3">{description}</p>
    )}
    <span class="inline-block mt-3 underline">Lees verder</span>
  </a>
</article>
