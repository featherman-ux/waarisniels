---
// src/layouts/BaseLayout.astro
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'WaarIsNiels â€“ reisblog & kaart' } = Astro.props;

// Active-state helper for the navbar
const path = Astro.url.pathname;
const isActive = (p: string) => path === p || path.startsWith(p + '/');

// Footer year
const currentYear = new Date().getFullYear();
---
<!doctype html>
<html lang="nl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{`${title} | WaarIsNiels`}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={`${title} | WaarIsNiels`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | WaarIsNiels`} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <slot name="head" />
  </head>
  <body class="bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-gray-200 antialiased">
    <header class="bg-white/90 backdrop-blur dark:bg-gray-800/90 shadow-md sticky top-0 z-50">
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-primary dark:text-primary-light">
 WaarIsNiels?
        </a>

        <div class="flex items-center gap-3 sm:gap-5">
 <a
   href="/blog/"
   aria-current={isActive('/blog') ? 'page' : undefined}
   class:list={[
     'text-sm sm:text-base px-2 py-1 rounded transition-colors',
     isActive('/blog')
       ? 'text-primary dark:text-primary-light underline underline-offset-4'
       : 'text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light'
   ]}
 >Blog</a>

 <a
   href="/map/"
   aria-current={isActive('/map') ? 'page' : undefined}
   class:list={[
     'text-sm sm:text-base px-2 py-1 rounded transition-colors',
     isActive('/map')
       ? 'text-primary dark:text-primary-light underline underline-offset-4'
       : 'text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light'
   ]}
 >Kaart</a>

 <a
   href="/about/"
   aria-current={isActive('/about') ? 'page' : undefined}
   class:list={[
     'text-sm sm:text-base px-2 py-1 rounded transition-colors',
     isActive('/about')
       ? 'text-primary dark:text-primary-light underline underline-offset-4'
       : 'text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-light'
   ]}
 >Over</a>
        </div>
      </nav>
    </header>

    <main class="container mx-auto px-6 py-8">
      <slot />
    </main>

    <footer class="bg-gray-100 dark:bg-gray-800 mt-12 py-8 text-center">
      <p class="text-gray-600 dark:text-gray-400">
        &copy; {currentYear} WaarIsNiels.
      </p>
      <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">
        Powered by <a href="https://astro.build/" target="_blank" rel="noopener noreferrer" class="hover:text-primary dark:hover:text-primary-light">Astro</a>
      </p>
    </footer>

    <script is:inline>
      // Minimal, anonymous pageview/event ping
      (async () => {
        if (typeof window === 'undefined') return;
        try {
 const evt = {
   type: 'pageview',
   path: location.pathname,
   ref: document.referrer || null,
   ua: navigator.userAgent.slice(0, 120),
   w: screen?.width,
   h: screen?.height,
 };
 await fetch('/api/analytics', {
   method: 'POST',
   headers: { 'content-type': 'application/json' },
   body: JSON.stringify(evt),
   keepalive: true,
 });
        } catch {}
      })();
    </script>
  </body>
</html>