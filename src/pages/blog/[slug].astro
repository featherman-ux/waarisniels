---
// src/pages/blog/[slug].astro
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';
import { getEntry } from 'astro:content';

export const prerender = false; // important for SSR

const { slug } = Astro.params;
const post = slug ? await getEntry('blog', slug) : undefined;

if (!post) {
  // nice 404 instead of a crash
  return new Response('Blogpost niet gevonden (check slug of draft:true).', { status: 404 });
}
---
<BlogPostLayout post={post} />