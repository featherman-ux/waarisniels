---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import BlogPostPreview from '../components/BlogPostPreview.astro';
import HomePopup from '../components/HomePopup.astro'; // ⬅️ popup import

const latestPosts = (await getCollection('blog', ({ data }) => data.draft !== true))
  .sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf())
  .slice(0, 3);
---

<BaseLayout title="Waar is Niels?" description="Welkom op mijn reisblog">
  <style>
    :root { --orange:#ffb703; --blue:#023047; }
    .hero {
      position: relative; width: 100%;
      min-height: 350px;
      max-height: 500px;
      overflow: hidden; border-radius: 0.75rem;
      margin: 0.75rem auto 1.25rem;
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }
    .hero img { width: 100%; height: 100%; object-fit: cover; filter: brightness(.7); transform: scale(1.02); }
    .hero-text { position: absolute; inset: 0; display: grid; place-items: center; color: #fff; text-align: center; padding: 0 1rem; }
    .hero-text h1 { font-size: 2.3rem; margin: 0 0 .4rem; line-height: 1.2; }
    .hero-text p { font-size: 1.05rem; margin: 0; opacity: .95; }

    .map-link { display: block; text-align: center; margin: 1rem auto; font-size: 1.1rem; }
    .map-link a { color: var(--blue); text-decoration: underline; }

    .posts { padding: 1.5rem 1rem 2.5rem; background:#f8f9fa; border-radius:.75rem; max-width:1200px; margin:auto; }
    .posts h2 { color: var(--blue); text-align:center; margin-bottom:1.1rem; font-size:1.6rem; }
    .grid-posts { display: grid; gap: 1.1rem; }
    @media (min-width: 640px) {.grid-posts { grid-template-columns: repeat(2,1fr); } }
    @media (min-width: 1024px){ .grid-posts { grid-template-columns: repeat(3,1fr); } }
  </style>

  <!-- Hero-afbeelding -->
  <section class="hero">
    <img src="/images/orange-car.jpg" alt="Oranje auto op de weg" />
    <div class="hero-text">
      <div>
        <h1>Waar is Niels?</h1>
        <p>Website in herontwikkeling – stap voor stap terug online. De eerste blogposts staan live!!!!! Crazy times</p>
      </div>
    </div>
  </section>

  <!-- ⬇️ Popup (tonen op homepage, 1x per persoon) -->
  <HomePopup />

  <!-- Link naar kaart -->
  <div class="map-link">
    <a href="/map">Bekijk de kaart met mijn reisroute</a>
  </div>

  <!-- Laatste blogposts -->
  <section class="posts">
    <h2>Laatste blogposts</h2>
    {latestPosts.length > 0 ? (
      <div class="grid-posts">
        {latestPosts.map(post => (<BlogPostPreview post={post} />))}
      </div>
    ) : (
      <p style="text-align:center;">Nog geen blogposts beschikbaar.</p>
    )}
  </section>
</BaseLayout>