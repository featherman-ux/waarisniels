  <script src="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/js/flag-icon.min.js"></script>
  <script>
    const countryToFlag = {
      Colombia: 'co',
      Ecuador: 'ec',
      Peru: 'pe',
      Brazil: 'br',
      Argentina: 'ar',
      Chile: 'cl',
      Bolivia: 'bo',
      Netherlands: 'nl'
    };

    const cityCoordinates = {
      "Cartagena": [10.4, -75.5],
      "Medell√≠n": [6.23, -75.59],
      "Quito": [-0.18, -78.47],
      "Lima": [-12.05, -77.05],
      "Cusco": [-13.52, -71.97]
    };

    fetch("travel_data.json")
      .then(response => response.json())
      .then(data => {
        const container = document.getElementById("travel-log");
        container.innerHTML = "";

        data.sort((a, b) => new Date(b.Arrival_Date) - new Date(a.Arrival_Date));

        data.forEach((entry, index) => {
          const div = document.createElement("div");
          div.className = "trip-entry";
          const flag = countryToFlag[entry.Country] || "xx";

          div.innerHTML = `
            <h3><span class="flag-icon flag-icon-${flag}"></span> ${entry.City}, ${entry.Country}</h3>
            <div class="trip-details">
              <p><strong>Data:</strong> ${entry.Arrival_Date} ‚Äì ${entry.Departure_Date}</p>
              <p><strong>Rating:</strong> ${entry.Rating}‚≠ê</p>
              <p>${entry.Notes}</p>
            </div>
          `;

          div.addEventListener("click", () => {
            div.classList.toggle("active");
          });

          container.appendChild(div);
        });

        const map = L.map('map').setView([-15, -60], 3);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          attribution: 'Map data ¬© <a href="https://openstreetmap.org">OpenStreetMap</a> contributors'
        }).addTo(map);

        data.forEach(entry => {
          const coords = cityCoordinates[entry.City];
          if (coords) {
            L.marker(coords).addTo(map)
              .bindPopup(`<strong>${entry.City}, ${entry.Country}</strong><br>${entry.Arrival_Date} ‚Äì ${entry.Departure_Date}`);
          }
        });
      })
      .catch(error => {
        document.getElementById("travel-log").innerHTML = "<p>Kon reisgegevens niet laden.</p>";
        console.error(error);
      });
  </script>
