---
// src/pages/map.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import LiveMap from '../components/LiveMap.jsx';

const pageTitle = "My Live Travel Map";
const pageDescription = "Follow my journey in real-time!";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="text-center mb-10">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100">{pageTitle}</h1>
    <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">{pageDescription}</p>
  </div>

  <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-xl">
    <LiveMap client:load />
  </div>

  <div class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
    <p>This map automatically refreshes every 30 seconds. Powered by OwnTracks, Mosquitto, and Node.js!</p>
  </div>
</BaseLayout>